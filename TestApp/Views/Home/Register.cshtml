
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>
<section id="contact" class="tm-section-pad-top tm-parallax-2">
    <div class="container tm-container-contact">
        <div class="row">


            <div class="col-sm-12 col-md-6 d-flex align-items-center tm-contact-item">
                <form action="Home" method="post">
                    First Name  <input name="FirstName" type="text" placeholder="First Name" class="tm-input" required /><br />
                    Second Name <input name="LasName" type="text" placeholder="LastName" class="tm-input" required /><br />
                    Age         <input name="Age" type="text" placeholder="Age" class="tm-input" required /><br />
                    Department  <input name=" Department" type="text" placeholder=" Department" class="tm-input" required /><br />
                    Address     <input name="Address" type="text" placeholder="Address" class="tm-input" required /><br />
                    City        <input name="City" type="text" placeholder="City" class="tm-input" required /><br />
                    Mail        <input name="Mail" type="text" placeholder="Mail" class="tm-input" required /><br />
                    Phone       <input name="Phone" type="text" placeholder="Phone" class="tm-input" required /><br />
                    <br /><button type="submit" class="btn tm-btn-submit">Register</button>
                </form>
            </div>
        </div>
    </div>
</section>

